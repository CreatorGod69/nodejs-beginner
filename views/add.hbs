<h1>Add new stars</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Service Name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate">
        <label for="price">Price</label>
    </div>

    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" required>
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter a Url"></span>
    </div>

    <div class="input-field col s6">
        <textarea name="description" id="icon_prefix2" class="materialize-textarea" required></textarea>
        <label for="icon_prefix2">Description</label>
    </div>

    <button class="btn deep-purple accent-4">Add stars</button>
</form>