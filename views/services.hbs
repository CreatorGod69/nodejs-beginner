<h1>Watch services</h1>

{{#if service.length}}
<div class="services">
        {{#each service}}
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="{{img}}" alt='{{title}}'>
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{title}}
                    <i class="material-icons right">more_vert</i>
                </span>

                {{#if price}}
                <span class="price">{{price}}</span>
                {{/if}}
                
                <form action="/card/add" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <p class="buy"><button type="submit" class="waves-effect waves-light btn purple darken-4">Buy</button></p>
                </form>

                <p><a href="/services/{{_id}}/edit?allow=true">Edit a Service</a></p>

            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">{{title}}<i
                        class="material-icons right">close</i></span>
                <p>{{brief_description}}</p>
                <p><a href="/services/{{_id}}" target="_blank">Learn More</a></p>
            </div>
        </div>
        {{/each}}
</div>
{{else}}
<p>Курсов пока нет</p>
{{/if}}